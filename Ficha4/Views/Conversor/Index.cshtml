@model Ficha4.Models.Conversor

@{
    ViewData["Title"] = "Index";
}

<h1>Conversor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Converter">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UnidadeInicial" class="control-label"></label>
                <span asp-validation-for="UnidadeInicial" class="text-danger"></span>

                <select asp-for="UnidadeInicial" asp-items="@ViewBag.ListaDeMoedas" class="form-control">

                </select>

                @Html.DropDownListFor(um => um.ValorIncial, new SelectList(ViewBag.ListaDeMoedas.Items, "Id", "Codigo"))
            </div>
            <div class="form-group">
                <label asp-for="UnidadeFinal" class="control-label"></label>
                <span asp-validation-for="UnidadeFinal" class="text-danger"></span>
                @Html.DropDownListFor(um => um.ValorIncial, new SelectList(ViewBag.ListaDeMoedas.Items, "Id", "Codigo"))
            </div>
            <div class="form-group">
                <label asp-for="ValorIncial" class="control-label"></label>
                <input asp-for="ValorIncial" class="form-control" />
                <span asp-validation-for="ValorIncial" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="ValorFinal" class="control-label"></label>
                <input asp-for="ValorFinal" class="form-control" disabled/>
                <span asp-validation-for="ValorFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaxaDeCambio" class="control-label"></label>
                <input asp-for="TaxaDeCambio" class="form-control" disabled/>
                <span asp-validation-for="TaxaDeCambio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Converter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
